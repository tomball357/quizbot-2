<h2>
  Add a new message
</h2>

<form action="/insert_message" method="post">


  <input type="hidden" id="quiz_id_box" name="query_quiz_id" value="<%= @the_quiz.id %>">

  <div>
    <label for="body_box">
      Body
    </label>

    <textarea id="body_box" name="query_body" rows="3"></textarea>
  </div>

  <button>
    Create message
  </button>
</form>

