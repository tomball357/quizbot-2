<div>
  <div>
    <h1>
      VBook #<%= @the_sim.id %> details
    </h1>

    <div>
      <div>
        <a href="/vbooks">
          Go back
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Topic
      </dt>
      <dd>
        <%= @the_sim.topic %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_sim.created_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>

<dl>
  <% @the_sim.messages.order(:created_at).each do |the_message| %>
    <dt><%= the_message.role %></dt>
    <dd><%= the_message.body %></dd>
  <% end %>
</dl>

<h2>
  Add a new message
</h2>

<form action="/insert_message" method="post">

  <input type="hidden" id="sim_id_box" name="query_sim_id" value="<%= @the_sim.id %>">

  <div>
    <label for="body_box">
      Body
    </label>

    <textarea id="body_box" name="query_body" rows="3"></textarea>
  </div>

  <button>
    Create message
  </button>
</form>

<div style="height: 500px"></div>
